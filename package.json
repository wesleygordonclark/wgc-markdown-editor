{
  "name": "wgc-markdown-editor",
  "version": "0.3.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "npx ts-node -r tsconfig-paths/register src/cli.ts dev",
    "build:ts": "tsc",
    "build:admin": "mkdir -p dist/templates/js && cp dist/core/admin.js dist/templates/js/admin.js",
    "build:site": "node dist/core/cli.js build",
    "build": "npm run clean && npm run build:ts && npm run build:admin && npm run build:site",
    "start": "npx ts-node -r tsconfig-paths/register src/cli.ts serve",
    "clean": "rimraf dist",
    "new": "npx ts-node -r tsconfig-paths/register src/cli.ts new",
    "export": "npx ts-node -r tsconfig-paths/register src/cli.ts export"
  },
  "dependencies": {
    "body-parser": "^1.20.3",
    "chokidar": "^3.6.0",
    "express": "^4.19.2",
    "gray-matter": "^4.0.3",
    "jsdom": "^26.1.0",
    "marked": "^12.0.2",
    "mustache": "^4.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/express": "^4.17.21",
    "@types/jsdom": "^21.1.7",
    "@types/mustache": "^4.2.5",
    "@types/node": "^20.11.30",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  }
}
